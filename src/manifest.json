{
    "name": "QuietDown 9GAG",
    "description": "Automatically adds the 'controls' attribute to all videos on 9gag.",
    "version": "1.0.2",
    "manifest_version": 3,
    "icons": {
        "16": "icons/icon-128.png",
        "32": "icons/icon-128.png",
        "48": "icons/icon-128.png",
        "128": "icons/icon-128.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon-128.png",
            "32": "icons/icon-128.png"
        },
        "default_title": "9GAG â€” Video Controls"
    },
    "content_scripts": [
        {
            "matches": [
                "*://9gag.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ]
}